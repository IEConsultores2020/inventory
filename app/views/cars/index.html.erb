<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Dealer</th>
      <th>Name</th>
      <th>Yearmodel</th>
      <th>Price</th>
      <th>Depreciation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.dealer.name %></td>
        <td><%= car.name %></td>
        <td><%= car.yearmodel %></td>
        <td><%= car.price %></td>
        <td><%= car.depreciation %></td>
        <td><%= link_to 'Show', car %></td>
        <% if current_user.role == 'Admin' %> 
          <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

