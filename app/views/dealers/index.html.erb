<p id="notice"><%= notice %></p>

<h1>Dealers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dealers.each do |dealer| %>
      <tr>
        <td><%= dealer.name %></td>
        <% if not current_user.nil? %>
          <td><%= link_to 'Show', dealer %></td>
        
          <% if current_user.role == 'Admin' %>  
            <td><%= link_to 'Edit', edit_dealer_path(dealer) %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if not current_user.nil? %>
  <% if current_user.role == 'Admin' %> 
    <%= link_to 'New Dealer', new_dealer_path %>
  <% end %>
<% end %>
